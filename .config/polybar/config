include-file = $HOME/.config/polybar/incmods.ini

[bar/lemon]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 25
fixed-center = true
wm-restack = bspwm
override-redirect = false
enable-ipc = true

top = true
background = ${colors.bg}
foreground = ${colors.wh}
border-bottom-size = 2
border-bottom-color = ${colors.wh}

scroll-up = #bspwm.next
scroll-down = #bspwm.prev

font-0 = "Iosevka Nerd Font:style=Medium:size=10;2"

modules-left = sep cpu sep bar sep memory sep bar sep volume sep bar sep title sep
modules-center = bspwm
modules-right = sep date sep bar sep eth wlan sep sep powermenu sep
