#!/usr/bin/env bash

pgrep -x sxhkd > /dev/null || sxhkd &

xrandr --output DP-2 --primary --mode 1920x1080 --rate 143.9 --rotate normal --output DP-0 --mode 1920x1080 --rate 143.9 --rotate normal --left-of DP-2

bspc monitor DP-2 -d 1 2 3 4 5
bspc monitor DP-0 -d 6 7 8 9 0

bspc config pointer_motion_interval 40
bspc config border_width            0
bspc config window_gap              12
bspc config split_ratio             0.50

bspc config borderless_monocle  true
bspc config gapless_monocle     true

steamlib=/home/lemon/HDD2TB/SteamLibrary    # path to your steamlibrary
steamgames=$(ls $steamlib/steamapps/appmanifest_*.acf | sed 's/[^0-9]*//g')    # this sed command removes everything but the digits

for game in $steamgames; do
    bspc rule -a steam_app_$game desktop=^10 state=fullscreen
done

killall -w polybar 2>/dev/null
sh $HOME/.config/polybar/launch.sh &

feh --bg-fill $HOME/.wallpapers/Reds/"Wallpaper (6).png" &

xsetroot -cursor_name left_ptr &

#killall -9 -qw picom 2>/dev/null; picom --config ~/.config/picom/picom.conf &
