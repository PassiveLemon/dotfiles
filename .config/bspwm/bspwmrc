#!/usr/bin/env bash

pgrep -x sxhkd > /dev/null || sxhkd &

xrandr --output DP-2 --primary --mode 1920x1080 --rotate normal --output DP-0 --mode 1920x1080 --rotate normal --left-of DP-2

bspc monitor DP-2 I II III IV V
bspc monitor DP-0 VI VII VIII IX X

sh $HOME/.config/polybar/launch.sh &
feh --bg-fill $HOME/.wallpapers/Reds/"Wallpaper (6).png" &
xsetroot -cursor_name left_ptr &
picom -b

bspc config pointer_motion_interval 40
bspc config border_width            0
bspc config window_gap              12
bspc config split_ratio             0.50

bspc config borderless_monocle  true
bspc config gapless_monocle     true
