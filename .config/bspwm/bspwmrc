#!/usr/bin/env bash

pgrep -x sxhkd > /dev/null || sxhkd &

xrandr --output DP-2 --primary --mode 1920x1080 --rate 143.9 --rotate normal --output DP-0 --mode 1920x1080 --rate 143.9 --rotate normal --left-of DP-2

bspc monitor DP-0 -d I II III IV V
bspc monitor DP-2 -d VI VII VIII IX X

bspc config pointer_motion_interval 40
bspc config border_width 0
bspc config window_gap 12
bspc config split_ratio 0.50

bspc config borderless_monocle true
bspc config gapless_monocle true

steamlibraryssd=/home/lemon/.steam/steam/
steamlibraryhdd=/home/lemon/HDD2TBEXT4/SteamLibrary/
steamgamesssd=$(ls ${steamlibssd}/steamapps/appmanifest_*.acf | sed 's/[^0-9]*//g')
steamgameshhd=$(ls ${steamlibhdd}/steamapps/appmanifest_*.acf | sed 's/[^0-9]*//g')

for gamessd in ${steamgamesssd}; do
    bspc rule -a steam_app_${gamessd} desktop=^X state=fullscreen
done

for gamehdd in ${steamgameshdd}; do
    bspc rule -a steam_app_${gamehdd} desktop=^X state=fullscreen
done

killall polybar
sh ${HOME}/.config/polybar/launch.sh &

feh --bg-fill ${HOME}/.background-image &

xsetroot -cursor_name left_ptr &

xinput set-prop "Glorious Model O" "Device Accel Constant Deceleration" 1.6
